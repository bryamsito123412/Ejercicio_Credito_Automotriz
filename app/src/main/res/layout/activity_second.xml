<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/txtViewMontoSolicitado"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="113dp" />

    <TextView
        android:id="@+id/txtViewContoTotalCredito"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/txtViewMontoSolicitado"
        android:layout_below="@+id/txtViewMontoSolicitado" />

    <TextView
        android:id="@+id/txtViewCantidadDeCuotas"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/txtViewMontoSolicitado"
        android:layout_below="@+id/txtViewContoTotalCredito" />

    <TextView
        android:id="@+id/txtViewValorCuota"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/txtViewMontoSolicitado"
        android:layout_below="@+id/txtViewCantidadDeCuotas" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="260dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Simulacion de Credito"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Volver a simular" />
</RelativeLayout>